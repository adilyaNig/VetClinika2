<Page x:Class="VetClinika.Pages.ReadersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VetClinika.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReadersPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListView Grid.ColumnSpan="6"
      Grid.RowSpan="8"
      Name="ReadersLv"
      ItemsSource="{Binding pacientsTalon}">
            <ListView.View>
                <GridView>
                    <GridView.Columns>

                        <GridViewColumn Header="ID талона" Width="70">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding idPriem}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="id_Pet" Width="70">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Pet.idPet}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Name Pet" Width="70">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Pet.namePet}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Дата приема" Width="110">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DataPriem, StringFormat=dd.MM.yyyy}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Комментарий" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Comment}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>




                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox Grid.Column="6"
     Grid.ColumnSpan="2"
     Grid.Row="1"
     Height="25"
     Width="180"
     Name="TicketSearchTb"
     TextChanged="TicketSearchTb_TextChanged"
     VerticalAlignment="Top"
     Padding="2 0 0 0"/>
        <TextBlock Text="Поиск читателя по билету"
       Grid.Column="6"
               Grid.ColumnSpan="2"
       HorizontalAlignment="Center"
       VerticalAlignment="Bottom"
       Margin=" 0 0 0 5"/>
        <DatePicker Name="dpFilterDate" 
           Grid.Column="6" 
           Grid.Row="3" 
           Grid.ColumnSpan="2" 
           Margin="10" 
           SelectedDateChanged="FiltrDate_SelectionChanged"/>
        
        <Button Grid.Column="6" Grid.Row="4" Grid.ColumnSpan="2" x:Name="ClearFilterButton" Content="Сбросить фильтр" Click="ClearFilterButton_Click" Margin="10" Width="120"/>

        <Button x:Name="AddReaderTicketBtn"
    Content="Новый прием"
    Grid.Column="6"
    Grid.ColumnSpan="2"
    Grid.Row="5"
    Click="AddReaderTicketBtn_Click"/>

        <Button x:Name="DeleteReadreBtn"
Content="Удалить прием"
Grid.Column="6"
Grid.ColumnSpan="2"
Grid.Row="6"
Click="DeleteReadreBtn_Click"/>

        <Button x:Name="ReadersListBtn"
    Grid.Column="6"
    Grid.ColumnSpan="2"
    Grid.Row="7"
    Content="Список пациентов"
    Click="ReadersListBtn_Click"/>
    </Grid>
</Page>
