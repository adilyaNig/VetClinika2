<Window x:Class="VetClinika.Windows.AddPetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetClinika.Windows"
        mc:Ignorable="d"
       Title="Добавить пациента" Height="350" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Имя"
                   Grid.ColumnSpan="2"
                   Grid.Row="0"
                   FontSize="18"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0 0 5 0"/>
        <TextBlock Text="Пол"
                   Grid.ColumnSpan="2"
                   Grid.Row="1"
                   FontSize="18"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0 0 5 0"/>
        <TextBlock Text="Вид животного:"
                   Grid.ColumnSpan="2"
                   Grid.Row="2"
                   FontSize="18"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0 0 5 0"/>
        <TextBlock Text="Вес"
                   Grid.ColumnSpan="2"
                   Grid.Row="3"
                   FontSize="18"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0 0 5 0"/>
        <TextBlock Text="Рост"
                   Grid.ColumnSpan="2"
                   Grid.Row="4"
                   FontSize="18"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0 0 5 0"/>

        <TextBox x:Name="NameTb"
                 Grid.Column="2"
                 Grid.Row="0"
                 Grid.ColumnSpan="2"
                 Height="35"
                 Width="200"/>
        <ComboBox x:Name="PolTb"
                 Grid.Column="2"
                 Grid.Row="1"
                 Grid.ColumnSpan="2"
                 Height="35"
                 Width="200"
                  DisplayMemberPath="name"
                 SelectedValuePath="id"/>
        <ComboBox x:Name="TypeTb"
                 Grid.Column="2"
                 Grid.Row="2"
                 Grid.ColumnSpan="2"
                 Height="35"
                 Width="200"
                  DisplayMemberPath="name"
                  SelectedValuePath="id" />
            <TextBox x:Name="WeightTb"
                 Grid.Column="2"
                 Grid.Row="3"
                 Grid.ColumnSpan="2"
                 Height="35"
                 Width="200"/>
            <TextBox x:Name="HeightTb"
                 Grid.Column="2"
                 Grid.Row="4"
                 Grid.ColumnSpan="2"
                 Height="35"
                 Width="200"/>
            <Button x:Name="SaveReaderBtn"
                Content="Добавить пациента"
                Click="SaveReaderBtn_Click"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Grid.Row="5"
                FontSize="18"/>
    </Grid>
</Window>
