<Window x:Class="VetClinika.Windows.MenuVrachWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetClinika.Windows"
        mc:Ignorable="d"
        Title="Меню врача" Height="450" Width="800" >
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <TextBlock x:Name="fioTb" Grid.RowSpan="2"
       Grid.Row="2"
       Grid.ColumnSpan="2"
       FontSize="20"
       FontWeight="Bold"
       TextWrapping="Wrap"
       Padding=" 0 10 0 0"
       VerticalAlignment="Top" HorizontalAlignment="Center"/>

        <TextBlock x:Name="typeTb"
        Grid.Row="1"
        Grid.ColumnSpan="2"
        FontSize="20"
        FontWeight="Bold"
        TextWrapping="Wrap"
        Padding=" 0 10 0 0"
        VerticalAlignment="Top" HorizontalAlignment="Center"/>      

        <TextBlock x:Name="idTb"
       Grid.Row="0" Margin="30 0 0 0"
       Grid.ColumnSpan="2"
       FontSize="15"
       Foreground="Gray"
       Padding=" 0 0 0 20"
       VerticalAlignment="Bottom"/>
       
        <Button x:Name="priemsBtn"
    Content="Приемы"
    Grid.Row="4"
    Grid.ColumnSpan="2"
    FontSize="20"
    VerticalContentAlignment="Center"
    Background="Wheat"
    Click="priemsBtn_Click"/>

        <Button x:Name="petsBtn"
Content="Список пациентов"
Grid.Row="5"
Grid.ColumnSpan="2"
FontSize="20"
VerticalContentAlignment="Center"
Background="Wheat"
Click="petsBtn_Click"/>


        <Button x:Name="exitBtn"
    Content="ВЫХОД"
    Grid.Row="6"
    Grid.RowSpan="2"
    Grid.ColumnSpan="2"
    FontSize="20"
    VerticalContentAlignment="Center"
    Background="DarkRed"
    Foreground="White"
    Click="exitBtn_Click"/>
        <Frame x:Name="menuFr"
       Grid.Column="2"
       Grid.ColumnSpan="6"
       Grid.RowSpan="8"/>
    </Grid>
</Window>
