<Window x:Class="VetClinika.Windows.AddPriemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetClinika.Windows"
        mc:Ignorable="d"
        Title="Добавить прием"
Height="350" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="12*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Пациент: "
           VerticalAlignment="Center"
           HorizontalAlignment="Left"
           Margin="117,0,0,0"/>
        <ComboBox Grid.Column="1"
          Height="20"
          Width="100"
          HorizontalAlignment="Center"
          Name="PetCm"
          ItemsSource="{Binding pets}" Margin="0,29,0,29">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding namePet}" Margin="0,0,5,0" />
                        <TextBlock Text=", " />
                        <TextBlock Text="{Binding Type_Pet.name}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="AddPetBtn"
        Height="25"
        Width="60"
        Content="Добавить"
        FontSize="10"
        Grid.Column="1"
        Margin=" 0 0 5 0"
        Click="AddPetBtn_Click"
        HorizontalAlignment="Right"
        VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button x:Name="UpdateBtn"
        Height="25"  
        Width="60"
        Content="Обновить"
        FontSize="10"
        Grid.Column="1"
        Margin=" 0 0 5 0"
        Click="UpdateBtn_Click"
        VerticalAlignment="Bottom"
        HorizontalAlignment="Right" Grid.ColumnSpan="2"/>
        <!-- Добавляем DatePicker -->
        <TextBlock Text="Дата приема: "
   VerticalAlignment="Top"
   HorizontalAlignment="Left"
   Margin="90,0,0,0" Grid.Row="1"/>

        <DatePicker Grid.Column="1"
                Grid.Row="1"
                Height="30"
                Name="DateOfVisitDtp"
                Width="100" 
                HorizontalAlignment="Center" VerticalAlignment="Top"
                />
        <TextBlock Text="Комментарий: "
   VerticalAlignment="Bottom"
   HorizontalAlignment="Left"
   Margin="90,0,0,0" Grid.Row="1"/>
        <TextBox Grid.Column="1" Grid.Row="1"
          Height="20"
          Width="100"
          HorizontalAlignment="Center" VerticalAlignment="Bottom"
          Name="ComTb"/>

        <Button x:Name="SavePriemBtn"
        Grid.ColumnSpan="2"
        Grid.Row="2"
        Height="35"
        Width="100"
        Content="Сохранить"
        Click="SavePriemBtn_Click" Margin="125,22,65,21"/>
    </Grid>
</Window>
